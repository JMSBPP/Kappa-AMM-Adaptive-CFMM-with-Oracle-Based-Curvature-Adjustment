[
    {
        "state": {
            "name": "subscribing",
            "type": "activity state",
            "expression": [
                "subscriptionState.SUBSCRIBING"
            ],
            "entry": [
                {
                    "name": "check pair address",
                    "type": "named event",
                    "expression": "isUniswapV2Pair(address uniswapPairAddress)"
                },
                {
                    "name": "check if it is already subscribed",
                    "type": "named event",
                    "expression": "Subscribers[uniswapPairAddress][liquidityProviderAddress]==false"
                },
                {
                    "name": "check if balance sent can cover reaactive network cost",
                    "type": "named event",
                    "expression": "msg.value > getReactiveCost()"
                }
            ],
            "input": [
                {
                    "name": "request subscription",
                    "type": "named event",
                    "expression": "subscription.requestSubscribe(UniswapPairAddress, liquidityProviderAddress)"
                }
            ],
            "exit": [
                {
                    "name": "",
                    "type": "",
                    "expression": ""
                }
            ]
        },
        "Transitions": [
            {
                "name": "request subscription funding and deploy kappa pool",
                "type": "condition-changed event",
                "expression": [
                    "safeTransfer(from: subscription, to: supplyProcessor, amount: msg.value-gasCost-reactiveCost)",
                ],
                "guards": [
                    {
                        "name": "balance covers transaction cost and reactive network cost",
                        "expresion": "validateFunding()==true"
                    },
                    {
                        "name": "no subscribers to pair",
                        "expression": "subscribersCount[_uniswapPairAddress] == 0"
                    }
                ],
                "output/response": [
                    {
                        "name": "deploy kappa pool",
                        "type": "named event",
                        "expression": "deployKappaPool(uniswapPairAddress)"
                    }
                ],
                "nextState": {
                    "name": "deploying kappa pool",
                    "type": "activity state",
                    "expression": [
                        "kappaPool.INITIALIZING"
                    ],
                    "entry": [
                        {
                            "name": "is first subscriber",
                            "type": "named event",
                            "expression": "PoolDeploymentLock(_uniswapPairAddress)"
                        },
                        {
                            "name": "get reactive cost",
                            "type": "named event",
                            "expression": "getReactiveCost(_uniswapPairAddress, amount)"
                        }
                    ],
                    "input": [
                        {
                            "name": "deploy kappa pool",
                            "type": "named event",
                            "expression": "deployKappaPool(uniswapPairAddress)"
                        }
                    ],
                    "exit": [
                        {
                            "name": "get data needed",
                            "type": "named event",
                            "expression": "getReactiveNetworkSubData()->(chainId, uniswapPairAddress, amountToPayREACT)"
                        }
                    ]
                }
            },
            {
                "name": "Not Subscribed liquidity provider to UniswapV2Pair",
                "type": "named event",
                "expression": [
                    "subscribers[UniswapPairAddress][liquidityProviderAddress] = false"
                ],
                "guards": [
                    {
                        "name": "",
                        "expresion": ""
                    },
                    {
                        "name": "",
                        "expression": ""
                    }
                ],
                "output/response": [
                    {
                        "name": "raise corresponding error",
                        "type": "named event",
                        "expression": [
                            "NotValidUniswapV2Pair()",
                            "AlreadySubscribed()",
                            "FundingFailed()"
                        ]
                    }
                ],
                "nextState": {
                    "name": "Not Subscribed liquidity provider to UniswapV2Pair",
                    "type": "activity state",
                    "expression": [
                        "subscribers[UniswapPairAddress][liquidityProviderAddress] = false"
                    ],
                    "entry": [
                        {
                            "name": "verify if it is not registered as subscribed",
                            "type": "activity state",
                            "expression": [
                                "subscribers[UniswapPairAddress][liquidityProviderAddress] = false"
                            ]
                        }
                    ],
                    "input": [
                        {
                            "name": "Not Subscribed liquidity provider to UniswapV2Pair",
                            "type": "activity state",
                            "expression": [
                                "subscribers[UniswapPairAddress][liquidityProviderAddress] = false"
                            ]
                        }
                    ],
                    "exit": [
                        {
                            "name": "",
                            "type": "",
                            "expression": []
                        }
                    ]
                }
            }
        ]
    }
]